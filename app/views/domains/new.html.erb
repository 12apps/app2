<div class="row">
  <div class="col-lg-4 col-lg-offset-4 text-center well domain-form">
    <h1 class="form-title">BuyMe</h1>
    <p class="lead">Sell your domain. Simple.</p>
    <%= form_for @domain do |f| %>
      <div class="form-group">
        <label for="domain">Domain</label>
        <input type="domain" name="domain" class="form-control" placeholder="domain.com">
      </div>
      <div class="form-group">
        <label for="email">Your Email</label>
        <input type="email" name="email" class="form-control" placeholder="you@domain.com">
      </div>
      <input type="submit" id="btn-login" class="btn btn-custom btn-lg btn-block" value="Submit">
    <% end %>
  </div>
</div>
